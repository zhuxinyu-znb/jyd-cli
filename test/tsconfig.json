{
    "compilerOptions": {
      "allowJs": true,
      "jsx": "react",
      "target": "es5",
      "lib": ["es6", "dom"],
      "types": ["reflect-metadata", "jest", "node"],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "./src",
      "outDir": "./dist",
      "paths": {
        "@components/*": ["client/components/*"],
        "@utils/*": ["client/utils/*"],
        "@assets/*": ["client/assets"],
        "@models/*": ["client/models/*"],
        "@pages/*": ["client/pages/*"],
        "@stores/*": ["client/stores"],
        "@mocks/*": ["client/mocks"],
      }
    },
    "include": [
      "src",
      "tests"
    ],
    "exclude": [
      "node_modules"
    ]
  }