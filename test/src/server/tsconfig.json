{
    "env": {
      "node": true,
      "es6": true,
      "browser": true,
    },
    "globals": {},
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "types": ["node"],
      "target": "es6",
      "lib": [
        "es6",
        "dom"
      ],
      "baseUrl": "../",
      "outDir": "./dist",
      "paths": {
        "@components/*": ["client/components/*"],
        "@utils/*": ["client/utils/*"],
        "@assets/*": ["client/assets"],
        "@models/*": ["client/models/*"],
        "@pages/*": ["client/pages/*"],
        "@stores/*": ["client/stores"],
      },
      "noImplicitAny": false,
      "sourceMap": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      // "noUnusedLocals": true
    },
    "compileOnSave": false,
    "exclude": [
      "node_modules"
    ]
  }